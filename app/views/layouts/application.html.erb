<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<nav class="navbar navbar-light bg-faded">

  <!-- Toggle Button -->
  <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#nav-content">
    &#9776;
  </button>
  <!-- Nav Content -->
  <div class="collapse navbar-toggleable-xs" id="nav-content">
    <a class="navbar-brand" href="/"><%= image_tag 'logo-small' %></a>
    <ul class="nav navbar-nav">
      <% unless current_user %>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign In', login_path, class: 'nav-link' %>
          </li>
      <% end %>
      <% if signed_in? %>
          <li class="nav-item">
            <%= link_to "Log out" %>
          </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link" href="<%= users_path %>">Browse Profiles</a>
      </li>
    </ul>
  </div>
</nav>

<% if flash.any? %>
    <% flash.each do |flash| %>
        <div class="alert alert-info"><%= flash[1] %></div>
    <% end %>
<% end %>

<div class="container">
  <%= yield %>
</div>

<footer class="footer-12">
  <div class="container">
    Made with <%= image_tag('heart') %> in Sai Gon
  </div>
</footer>

</body>
</html>
